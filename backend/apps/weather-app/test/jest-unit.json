{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testMatch": ["<rootDir>/test/unit/**/*.spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "<rootDir>/tsconfig.spec.json"
      }
    ]
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "setupFiles": ["<rootDir>/../../jest.setup.ts"]
}
