{
  "name": "weather",
  "version": "1.0.0",
  "scripts": {
    "dev:start": "docker-compose -f docker-compose.dev.yaml up -d",
    "dev:stop": "docker-compose -f docker-compose.dev.yaml down",
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install -g @nestjs/cli && npm install",
    "install:frontend": "cd frontend && npm install -g @angular/cli && npm install",
    "build:all": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start:all": "npm run start:backend & npm run start:frontend",
    "start:backend": "cd backend && npm run start:prod",
    "start:frontend": "cd frontend && npm run start",
    "test:unit:frontend": "docker-compose -f docker-compose.test.yaml up --build test-unit-frontend",
    "test:unit:weather-app": "docker-compose -f docker-compose.test.yaml up --build test-unit-weather-app",
    "test:architecture:weather-app": "docker-compose -f docker-compose.test.yaml up --build test-architecture-weather-app",
    "test:integration:weather-app": "docker-compose -f docker-compose.test.yaml up --build test-integration-weather-app",
    "test:unit:notifications": "docker-compose -f docker-compose.test.yaml up --build test-unit-notifications",
    "test:architecture:notifications": "docker-compose -f docker-compose.test.yaml up --build test-architecture-notifications",
    "test:integration:notifications": "docker-compose -f docker-compose.test.yaml up --build test-integration-notifications"
  },
  "keywords": [
    "weather"
  ],
  "author": "Pasha-Makarenko <pashamakarenko2007@gmail.com>",
  "license": "MIT",
  "description": ""
}